<form bindsubmit='subval'>
  <view class='login_box'>
    <image src='/images/yiqi_img1.png' class='login_img'></image>
    <view class='login_list'>
      <label>昵称</label><input type='text' placeholder='请输入昵称' name="nickName"></input>
    </view>
    <view class='login_list'>
      <label>手机</label><input type='number' placeholder='请输入手机' name="mobile" bindinput='clicktel'></input>
    </view>
    <view class='login_list'>
      <label>验证码</label><input type='text' placeholder='请输入验证码' name="code"></input><button class='getyzm' bindtap='getyzm'>获取验证码</button>
    </view>
    <view class='login_list'>
      <label>密码</label><input type='password' placeholder='请输入密码' name="password"></input>
    </view>
    <view class='login_list'>
      <label>邀请码</label><input type='text' placeholder='请输入服务商ID' name="serviceProviderId"></input>
    </view>
    <view>
      <button class="login_btn" formType="submit">注册</button>
      <view><image src='/images/yiqi_img16.png' class='shuoming'></image>服务商短信通知您授权成功后才可登录</view>
    </view>
  </view>
</form>


